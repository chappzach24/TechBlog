<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>The Tech Blog</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    
    <link
      href='https://fonts.googleapis.com/css?family=IBM+Plex+Sans:400,400i,700&display=swap'
      rel='stylesheet'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body class='flex-column min-100-vh'>
    <nav class='navbar'>
      <ul class='flex-row'>
        <li class='li-inline nav-item'><a href='/'>Home</a></li>
        <li class='li-inline nav-item'><a href='/dashboard'>Dashboard</a></li>
        {{#if loggedIn}}
          <li class='li-inline nav-item'><a href='#' id='logout'>Logout</a></li>
        {{else}}
          <li class='li-inline nav-item'><a href='/login'>Login</a></li>
        {{/if}}
      </ul>
    </nav>
    <header class='hero'>
      {{#if dashboard}}
        <h1 class='app-title'><a href='/dashboard'>Your Dashboard</a></h1>
      {{else}}
        <h1 class='app-title'><a href='/'>The Tech Blog</a></h1>
      {{/if}}
    </header>
    <main class='col-auto'>
      {{{body}}}
    </main>
    {{#if dashboard}}
      <footer class='footer flex-row justify-center'>
        <a href='/dashboard/new'>:heavy_plus_sign: New Post</a>
      </footer>
    {{else}}
      <footer class='flex-row justify-center'>
        &copy; The Tech Blog Folks
      </footer>
    {{/if}}
    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>
</html>