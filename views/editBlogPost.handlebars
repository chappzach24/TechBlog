<div class="blogPost card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-blogPost-form" class="card-body">
    <input type="hidden" name="blogPost-id" value="{{blogPost.id}}" />
    <div class="mb-3">
      <label class="form-label" for="blogPost-title">Title</label>
      <input type="text" name="blogPost-title" value="{{blogPost.title}}" class="form-control" />
    </div>
    <div class="mb-3">
      <label class="form-label" for="blogPost-body">Content</label>
      <textarea name="blogPost-body" class="form-control">{{blogPost.body}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="button" id="delete-btn" class="btn btn-danger">Delete</button>
  </form>
</div>
<script src="/js/edit.js"></script>
